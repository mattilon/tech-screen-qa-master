{
  "compilerOptions": {
      "outDir": "./tsdist/",
      "sourceMap": true,
      "alwaysStrict": true,
      "removeComments": true,
      "module": "esnext",
      "target": "es5",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "lib": ["es2017", "dom"]
  },
  "include": [
      "./app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
